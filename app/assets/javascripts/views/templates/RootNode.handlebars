<div id='{{id}}' class='node root {{#if folded}}folded{{/if}} {{#if selected}}selected{{/if}}'>
  <div class='rightChildren children'></div>
  <div class='leftChildren children'></div>
  
  <div class='inner-node'>
    <div class='content'>
      {{#if isHTML}}
        {{{nodeText}}}
      {{else}}
        {{nodeText}}
      {{/if}}
    </div>
    <div class='controls'>
      <i class='icon-edit action-edit'></i>
      <i class='icon-file action-new-node'></i>
      <i class='icon-globe action-share'></i>
      <i class='icon-comment action-show'></i>
      <i class='icon-wrench action-change'></i>    
    </div>
  </div>
</div>