<div class='children'></div>
<div class='inner-node'>
  <div class='content {{#if isHtml}}isHtml{{/if}}'>{{#if isHtml}}{{{nodeText}}}{{else}}{{nodeText}}{{/if}}</div>
  {{#if foldable}}
    <div class='action-fold collapse-icon node-control'>
      <img class='action-fold-all' src="{{minusIcon}}">
    </div>
    <div class='action-fold expand-icon invisible node-control'>
      <img class='action-fold-all' src="{{plusIcon}}">
    </div>
  {{/if}}
  
  {{#if lockable}}
  <div class='lock node-control {{#if locked}}visible{{/if}}'>
    <i class="icon-user"></i>
    <span class="lock-username">{{#if locked}}{{{lockedBy}}}{{/if}}</span>
  </div>
  {{/if}}
</div>