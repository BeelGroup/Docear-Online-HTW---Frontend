<form action="{{action}}" method="PUT" class="file-upload" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT" />
    <span class="btn btn-primary fileinput-button">
        <i class="icon-plus icon-white"></i>
        <span>Add files...</span>
        <input class="file-to-upload" type="file" name="files" multiple>
    </span>
    <button class="btn btn-success file-upload-button"><span class="icon-upload"></span> Upload</button> 
    <ul class="selected-filenames"></ul>
</form>