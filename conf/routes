# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /favicon.ico                controllers.Assets.at(path="/public", file="images/favicon.ico")
GET     /                           controllers.Application.index()
GET     /mvc                        controllers.Application.mvc()
GET     /small-solutions            controllers.Application.smallSolutions()
GET     /rest/v1/user/xyz/mindmap/1.json    controllers.Assets.at(path="/public", file="mindmaps/example1.json")
GET     $path</rest/v1/.*>            controllers.MindMap.index(path: String)


GET     /qunit                      controllers.QUnit.testAll()

# Mindmap
GET		/map/json/:id				controllers.MindMap.map(id: String)
GET		/maps/from/:user    			controllers.MindMap.mapListFromDB(user: String)
GET		/map/from/:user/withId/:id	controllers.MindMap.mapFromDB(user: String, id: String)
GET		/map/close/:id				controllers.MindMap.closeMap(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
